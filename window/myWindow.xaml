<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="covoiturage.myWindow"
	x:Name="Window"
	Title="myWindow"
	Width="700" Height="400" WindowStyle="ToolWindow" MinWidth="700" MinHeight="400" MaxWidth="700" MaxHeight="400">

	<Grid x:Name="LayoutRoot">
        <DataGrid x:Name="my_datagrid" Margin="0,0,1,0">
            <DataGrid.RowStyle>
                <Style TargetType="{x:Type DataGridRow}">
                    <EventSetter Event="MouseDoubleClick" Handler="resultDataGrid_MouseDoubleClick"/>
                </Style>
            </DataGrid.RowStyle>
        </DataGrid>
    </Grid>
</Window>